inversor() {
    # Dividir a saida em linhas invertidas:
    rev | while read linha; do
        # Dividir cada linha invertida em colunas:
        for cn in `echo $linha`; do
            # Mostrar coluna, desinvertendo suas letras
            echo -n `echo $cn | rev`
            # Dar espaco
            echo -n " "
        done

        # pular linha
        echo ""
    done
}

