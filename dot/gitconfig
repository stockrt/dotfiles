[user]
    name = @@name@@
    email = @@email@@
[github]
    user = @@gituser@@
    password = @@gitpass@@
[alias]
    co = checkout
    br = branch
    st = status
    df = diff
    dc = diff --cached
    ds = diff --stat
    ap = add -p
    ci = commit
    ld = log --decorate --oneline
    lp = log -p --decorate
    gl = log --graph --pretty=oneline --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    sl = stash list
    sp = stash show -p
[core]
#    filemode = false
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FRSX
    editor = vim
#    autocrlf = input
#    safecrlf = true
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    pager = true
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[mergetool "diffmerge"]
    cmd = diffmerge --merge --result=$MERGED -t1="LOCAL" -t2="BASE ANCESTOR" -t3="REMOTE" $LOCAL $BASE $REMOTE
    trustExitCode = false
[push]
    default = current
[rerere]
    enabled = true
